            //Drop Top Rain Drop -- Dropdown
                document.getElementById("eventdetailsh").onclick = function() { dropdown("eventdetails"); };
                document.getElementById("eventrulesh").onclick = function() { dropdown("eventrules"); };
                document.getElementById("eventadditionalh").onclick = function() { dropdown("eventadditional"); };
                document.getElementById("eventcontacth").onclick = function() { dropdown("eventcontact"); };
            
            
            function topicin(topic)
            {
                temp = flag;
                document.getElementById("mainpage").setAttribute("class",topic+"bg");
            }
            
            function topicout()
            {
               if(flag==0)
               {
                   flag = temp;
                   document.getElementById("mainpage").setAttribute("class","");
               }
            }
            
            function topicclick(topic)
            {
                flag=1;

                document.getElementById("mainpage").setAttribute("class",topic+"bg");
                document.getElementById(topic).style.backgroundColor = "#888";
                document.getElementById(topic+"div").style.display ="block";
            }
            
