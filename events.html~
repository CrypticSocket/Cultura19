            function closebox()
            {
                document.getElementById("boxpop").style.display = "none";
                document.getElementById("maincontainer").style.filter = "";
                stopic = 0;
            }

            function setoptionnum(x)
            {
                switch(x)
                {
                    case "pubg":
                        
                        stopic = 1;
                        break;
                    
                    case "fifa":

                        stopic = 2;
                        break;

                    case "dota":
                        stopic = 3;
                        break;

                    case "csgo":
                        stopic = 4;
                        break;

                    case "cod":
                        stopic = 5;
                        break;

                    case "nfs":
                        stopic = 6;
                        break;

                    default: 
                        stopic = 0;
                        break;              
                }

            }
            
            function drophide()
            {
                
                    document.getElementById("eventdetails").style.display="none";
                    document.getElementById("eventrules").style.display="none";
                    document.getElementById("eventadditional").style.display="none";
                    document.getElementById("eventcontact").style.display="none";
                
            }
            
            function dropdown(x)
            {
            
                drophide();
                document.getElementById(x).style.display="block";
            
            }
            
            
